<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElegirJuego"
    android:background="@drawable/juegos_fondo"
    android:id="@+id/elegirJuego">




    <TextView

        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="486dp"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/borde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.877">

    </TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/elegir_juego"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageButton
        android:id="@+id/ibAhorcado"
        android:layout_width="130dp"
        android:layout_height="94dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/pierna_derecha"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView">

    </ImageButton>

    <ImageButton
        android:id="@+id/ibBrisca"
        android:layout_width="130dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/brisca"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView">

    </ImageButton>

    <TextView
        android:id="@+id/tvAhorcado"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:text="Ahorcado"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#158E8E"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/ibAhorcado">

    </TextView>

    <TextView
        android:id="@+id/tvBrisca"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginEnd="40dp"
        android:text="Brisca"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#158E8E"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/ibBrisca">

    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fgJugar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>