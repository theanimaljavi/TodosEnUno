<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ahorcado_elegir_tematica"
    tools:context=".Ahorcado.ElegirTematica"
    android:background="@drawable/fondo_tematica">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/elegir_tematica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cargarJugarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="339dp"
        android:layout_height="624dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <ImageButton
            android:id="@+id/ibTJuegos"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/tematica_juego_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <TextView
            android:id="@+id/tvTJuego"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Juegos"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTJuegos">

        </TextView>

        <ImageButton
            android:id="@+id/ibTAlimentacion"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/tematica_alimentacion_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <TextView
            android:id="@+id/tvTAlimentacion"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="Alimentacion"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTAlimentacion">

        </TextView>

        <ImageButton
            android:id="@+id/ibTAnimales"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/tematica_animales_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTAnimales"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Animales"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTAnimales">

        </TextView>

        <ImageButton
            android:id="@+id/ibTDeportes"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/tematica_deporte_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <TextView
            android:id="@+id/tvTDeportes"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="Deportes"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTDeportes">

        </TextView>

        <ImageButton
            android:id="@+id/ibTProfesiones"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="412dp"
            android:background="@drawable/tematica_profesiones_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <TextView
            android:id="@+id/tvTProfesiones"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Profesiones"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTProfesiones">

        </TextView>

        <ImageButton
            android:id="@+id/ibTTecnologia"
            android:layout_width="132dp"
            android:layout_height="131dp"
            android:layout_marginTop="412dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/tematica_tecnologia_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <TextView
            android:id="@+id/tvTTecnologia"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="Tecnologia"
            android:textColor="#158E8E"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTTecnologia">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>